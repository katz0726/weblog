    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run(development)",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "run(production)",
            "env": {
                "NODE_ENV": "production"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Gulp",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}